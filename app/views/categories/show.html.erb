<div class="container">
    <%= render "flash" %>
</div>

<div class="container mt-5 text-center">
    <h1><%= @category.category_title %></h1>
    <div class="row d-flex justify-content-center">
        <div class="col-6"><h3 class="lead"><%= @category.category_detail %></h3></div>
    </div>
</div>
 
<div class="container my-2">
<div class="row text-center justify-content-center">
    <div class="col-6"><h2>Tasks</h2></div>
    <div class="col-6">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
          Add Task
        </button>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Info
        </button>
    </div>
</div>
    <div class="row d-flex justify-content-center mt-4">
    <% if @tasks.length > 0 %>
    <% @tasks.where("due_date = ?", Date.current).each do |task| %>
      <%= render "partials/tasks", task: task %>
    <% end %> 
    <% @tasks.where("due_date != ?", Date.current).each do |task| %>
      <%= render "partials/tasks", task: task %>
    <% end %>  
    <% @tasks.where(due_date: nil).each do |task| %>
      <%= render "partials/tasks", task: task %>
    <% end %>  
        </div>
    </div>
</div>

    <% else %>
    <h1 class="text-center "><%= image_tag "todo_working", class: "rounded mx-auto d-block w-25" %>No Tasks Yet</h1>
    <% end %>

<%= render "partials/modals" %>